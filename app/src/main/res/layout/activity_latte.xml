<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.codetride.coffeemakerapp.Latte">

    <ImageView
        android:id="@+id/imgSecret"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:src="@drawable/secret" />

    <TextView
        android:id="@+id/lblQuickOrder"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/lblLattee"
        android:textColor="#FF0000"
        android:textSize="42sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/lblLovers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblQuickOrder"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="@string/lblcoffee_lovers_guide"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lblQuickOrder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/lblQuantityLatte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:paddingRight="15dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#996633"
            android:textStyle="bold"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="17dp"
            android:layout_weight="1"
            android:src="@drawable/latte" />

        <TextView
            android:id="@+id/lblTotalLatte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#996633"
            android:textStyle="bold" />

    </LinearLayout>


    <Button
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/btnAdd"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="15dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#996633"
        android:text="@string/btnAddLatte" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/btnAdd"
        android:layout_alignStart="@+id/btnAdd"
        android:layout_below="@+id/btnAdd"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="#996633"
        android:layout_marginTop="10dp"
        android:text="@string/btnMinusLatte" />

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/lblQuickOrder"
        android:layout_alignEnd="@+id/lblQuickOrder"
        android:textStyle="bold"
        android:background="#000"
        android:textColor="#FF0000"
        android:text="@string/orderLatte" />

    <TextView
        android:id="@+id/lblDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#996633"
        android:textStyle="bold"
        android:layout_below="@+id/btnMinus"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        android:id="@+id/proMenu"
        style="?android:attr/progressBarStyle"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
